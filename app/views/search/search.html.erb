<% provide(:title, "Search results for #{params[:search]}") %>
<%= form_tag search_search_path, :method => 'get' do %>
  <p>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Go", :name => nil %>
  </p>
<% end %>

<div><%= pluralize(@results.total, 'Result') %></div>

<%= will_paginate @results.search.results %>

<table>
  <tr>
    <th>中文</th>
    <th>English</th>
  </tr>

<% @results.result_set.each do |item| %>
  <tr>
    <td><%= item[:chinese_paragraph].content %></td>

    <td><%= item[:english_paragraph].content %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @results.search.results %>