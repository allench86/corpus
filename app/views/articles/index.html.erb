<h1>Listing articles</h1>

<div class="articles pagination_wrapper">
  <%= will_paginate @articles %>
</div>

<p><%= link_to 'New Article', new_article_path %></p>

<table class="articles list">
  <tr>
    <th class="articles list doc_id_col">Doc ID</th>
    <th class="articles list speech_id_col">Speech ID</th>
    <th class="articles list event_col">Event</th>
    <th class="articles list speech_title_col">Speech Title</th>
    <th class="articles list speaker_col">Speaker</th>
    <th class="articles list topic_col">Topic</th>
    <th class="articles list last_edit_col">Last Edit</th>
    <th class="articles list actions_col">Actions</th>
  </tr>

<% @articles.each do |article| %>
  <tr class="articles list chinese">
    <td class="articles list doc_id_col"><%= link_to article.chinese_metadata["Doc_ID"], article %></td>
    <td class="articles list speech_id_col"><%= link_to article.chinese_metadata["Speech_ID"], article %></td>
    <td class="articles list event_col"><%= link_to article.chinese_metadata["Event"], article %></td>
    <td class="articles list speech_title_col"><%= link_to article.chinese_metadata["Speech_Title"], article %></td>
    <td class="articles list speaker_col"><%= article.chinese_metadata["Speaker"] %></td>
    <td class="articles list topic_col"><%= article.chinese_metadata["Topic"] %></td>
    <td class="articles list last_edit_col" rowspan="2">
        <%= article.last_editor.name %>
        <br>
        <%= article.created_at %>
    </td>
    <td class="articles list actions_col" rowspan="2">
      <%= link_to 'Edit', edit_article_path(article) %>
      <br>
      <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <tr class="articles list english">
    <td class="articles list doc_id_col"><%= link_to article.english_metadata["Doc_ID"], article %></td>
    <td class="articles list speech_id_col"><%= link_to article.english_metadata["Speech_ID"], article %></td>
    <td class="articles list event_col"><%= link_to article.english_metadata["Event"], article %></td>
    <td class="articles list speech_title_col"><%= link_to article.english_metadata["Speech_Title"], article %></td>
    <td class="articles list speaker_col"><%= article.english_metadata["Speaker"] %></td>
    <td class="articles list topic_col"><%= article.english_metadata["Topic"] %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Article', new_article_path %>

<br />
<div class="articles pagination_wrapper">
  <%= will_paginate @articles %>
</div>

