<p id="notice"><%= notice %></p>

<table class="articles article">
  <tr>
    <th class="articles article first_column">中文</th>
    <th class="articles article second_column">English</th>
  </tr>
  <% max_paragraph_num = [@article.chinese_paragraphs.size, @article.english_paragraphs.size].max %>
  <% (0..max_paragraph_num-1).each do |i| %>
  <tr class="articles article <%= cycle("odd_tr", "even_tr") %>">
    <td>
      <div class="articles article content_wrapper">
        <%= @article.chinese_paragraphs[i] ? @article.chinese_paragraphs[i].content : "" %>
      </div>
    </td>
    <td>
      <div class="articles article content_wrapper">
        <%= @article.english_paragraphs[i] ? @article.english_paragraphs[i].content : "" %>
      </div>
    </td>
  </tr>
  <% end %>
</table>
<br>
<% if signed_in? %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back To All Articles', articles_path %>
<% end %>
